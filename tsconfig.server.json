{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/server",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "api/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client"]
} 