{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*", "vite.config.ts"],
  "exclude": ["client/**/*", "dist/**/*", "**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
} 